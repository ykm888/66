# 目标平台锁定
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
# 🛠️ 物理对齐：锁定 Device/sl_3000-emmc
CONFIG_TARGET_mediatek_filogic_DEVICE_sl_3000-emmc=y
CONFIG_TARGET_BOARD="mediatek"

# U-Boot 物理对齐 (匹配 MK 中的 emmc-ddr3 规则)
CONFIG_PACKAGE_uboot-mediatek_mt7981=y
CONFIG_UBOOT_VARIANT_mt7981_emmc_ddr3=y

# 核心内核模块 (物理兼容 eMMC & F2FS)
CONFIG_PACKAGE_kmod-mmc=y
CONFIG_PACKAGE_kmod-fs-f2fs=y
CONFIG_PACKAGE_f2fs-tools=y
CONFIG_PACKAGE_f2fsck=y

# USB 3.0 物理支持 (对齐 DTS 中的 xhci 节点)
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-dwc3-mtk=y

# 基础软件与中文语言包
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# 网络共享插件 (对齐 DEVICE_PACKAGES 中的 ksmbd)
CONFIG_PACKAGE_luci-app-ksmbd=y
CONFIG_PACKAGE_luci-i18n-ksmbd-zh-cn=y
CONFIG_PACKAGE_ksmbd-utils=y

# 分区布局锁定 (512MB 满足 EMMC 物理需求)
CONFIG_TARGET_ROOTFS_PARTSIZE=512

# 禁用不相关的平台 (保持配置纯净)
# CONFIG_TARGET_x86 is not set
# CONFIG_TARGET_x86_64 is not set
